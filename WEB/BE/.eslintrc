{
  "plugins": ["prettier"],
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "script",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "ignorePatterns": ["node_modules/"],

  "rules": {
    "no-console": "error",
    "camelcase": "error",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "implicit-arrow-linebreak": "off",
    "no-underscore-dangle": "off",
    "no-unused-vars": "warn",
    "consistent-return": "off",
    "no-alert": "off",
    "no-return-assign": "off",
    "import/prefer-default-export": "off",
    "no-param-reassign": "off",
    "no-shadow": "off",
    "no-continue": "off",
    "no-plusplus": "off",
    "no-new": "off"
  }
}
