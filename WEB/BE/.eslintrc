{
  "extends": [
    "prettier",
    "airbnb-base",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "script",
  },
  "env": {
    "browser": true,
    "node": true 
  },
  "ignorePatterns": [
    "node_modules/"
  ],

  "rules": {
    "linebreak-style": 0,
    "import/no-dynamic-require": 0,
    "import/no-unresolved": 0,
    "import/prefer-default-export": 0,
    "global-require": 0,
    "import/no-extraneous-dependencies": 0,
    "import/extensions": 0,
    "no-use-before-define": 0,
    "no-console": "error",
    "camelcase": "error",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}